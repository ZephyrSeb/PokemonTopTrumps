<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityChallenge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/battle_frontier_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/blueCard"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/icon_blue_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/bp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 BP"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@id/blueCard"
        app:layout_constraintBottom_toBottomOf="@id/blueCard"
        app:layout_constraintEnd_toStartOf="@id/blueCard"/>

    <Button
        android:id="@+id/battleTowerButton"
        android:layout_width="192dp"
        android:layout_height="144dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/mode_battle_tower"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="1000dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/battleFactoryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/battleFactoryButton"
        android:layout_width="192dp"
        android:layout_height="144dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/mode_battle_factory"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/battleTowerButton"
        app:layout_constraintBottom_toTopOf="@id/battleArcadeButton"
        app:layout_constraintStart_toEndOf="@id/battleStageButton"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/battleArcadeButton"
        android:layout_width="192dp"
        android:layout_height="144dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/mode_battle_arcade"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/battleFactoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/battleDojoButton"
        app:layout_constraintBottom_toTopOf="@id/shopButton"/>

    <Button
        android:id="@+id/battleDojoButton"
        android:layout_width="192dp"
        android:layout_height="144dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/mode_battle_dojo"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/battleStageButton"
        app:layout_constraintEnd_toStartOf="@id/battleArcadeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shopButton"/>

    <Button
        android:id="@+id/battleStageButton"
        android:layout_width="192dp"
        android:layout_height="144dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/mode_battle_stage"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/battleTowerButton"
        app:layout_constraintBottom_toTopOf="@id/battleDojoButton"
        app:layout_constraintEnd_toStartOf="@id/battleFactoryButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/shopButton"
        android:layout_width="192dp"
        android:layout_height="144dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/mode_bp_shop"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1000dp"
        app:layout_constraintTop_toBottomOf="@id/battleArcadeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/deckButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/icon_deck_black"
        android:shadowRadius="32"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:translationZ="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decks"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="11sp"
        android:translationZ="10dp"
        android:layout_marginBottom="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/deckButton"
        app:layout_constraintStart_toStartOf="@id/deckButton"
        app:layout_constraintEnd_toEndOf="@id/deckButton"/>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/icon_return_black"
        android:shadowRadius="32"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:translationZ="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="11sp"
        android:translationZ="10dp"
        android:layout_marginBottom="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/returnButton"
        app:layout_constraintStart_toStartOf="@id/returnButton"
        app:layout_constraintEnd_toEndOf="@id/returnButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>