<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_gradient">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:background="@drawable/attribute_selection"
        android:elevation="8dp"
        android:shadowRadius="32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ruleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/futura_medium_bt"
        android:text="DESCRIPTION"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"/>

    <Button
        android:id="@+id/yesButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_red"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:text="Yes"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/noButton"
        app:layout_constraintTop_toBottomOf="@id/ruleDescription"/>

    <Button
        android:id="@+id/noButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:text="No"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/yesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ruleDescription"/>


</androidx.constraintlayout.widget.ConstraintLayout>