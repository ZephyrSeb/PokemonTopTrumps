        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <ImageView
        android:id="@+id/buttonSPD"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:translationY="118dp"
        android:src="@drawable/attribute_selection_off"
