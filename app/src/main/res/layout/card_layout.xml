<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="288dp"
    android:layout_height="400dp"
    android:scaleX="1"
    android:scaleY="1"
    android:id="@+id/cardRaw">

    <ImageView
        android:id="@+id/cardFrame"
        android:layout_width="288dp"
        android:layout_height="400dp"
        android:src="@drawable/card_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="240dp"
        android:layout_height="168dp"
        android:src="@drawable/pokemon_venusaur"
        app:layout_constraintBottom_toBottomOf="@+id/cardFrame"
        app:layout_constraintEnd_toEndOf="@+id/cardFrame"
        app:layout_constraintStart_toStartOf="@+id/cardFrame"
        app:layout_constraintTop_toTopOf="@+id/cardFrame"
        app:layout_constraintVertical_bias="0.17" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/gill_sans_bold"
        android:textColor="@color/black"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardFrame"
        app:layout_constraintEnd_toEndOf="@+id/cardFrame"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="@+id/cardFrame"
        app:layout_constraintTop_toTopOf="@+id/cardFrame"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/flavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flavor"
        app:layout_constraintStart_toStartOf="@+id/cardFrame"
        app:layout_constraintTop_toBottomOf="@+id/cardImage"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:textSize="8sp"
        android:fontFamily="@font/futura_medium_bt"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/abilityIcon"
        android:layout_width="40sp"
        android:layout_height="20sp"
        android:src="@drawable/ability"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:scaleY="1.5"
        android:scaleX="1.5"
        app:layout_constraintStart_toStartOf="@+id/cardFrame"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <TextView
        android:id="@+id/ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_medium_bt"
        android:text="Ability"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/abilityIcon"
        app:layout_constraintStart_toEndOf="@+id/abilityIcon"
        app:layout_constraintTop_toTopOf="@+id/abilityIcon" />

    <ImageView
        android:id="@+id/buttonHP"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:translationY="43dp"
        android:src="@drawable/attribute_selection_off"
        app:layout_constraintEnd_toEndOf="@+id/cardFrame"
        app:layout_constraintStart_toStartOf="@+id/cardFrame"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <ImageView
        android:id="@+id/buttonATK"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:translationY="58dp"
        android:src="@drawable/attribute_selection_off"
        app:layout_constraintEnd_toEndOf="@+id/cardFrame"
        app:layout_constraintStart_toStartOf="@+id/cardFrame"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <ImageView
        android:id="@+id/buttonDEF"
        android:layout_width="240dp"
        android:layout_height="16dp"
        android:translationY="73dp"
        android:src="@drawable/attribute_selection_off"
        app:layout_constraintEnd_toEndOf="@+id/cardFrame"
