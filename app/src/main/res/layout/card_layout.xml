        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/futura_medium_bt"
        android:textColor="@color/black"
        android:text="Weakness"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardFrame"
        app:layout_constraintStart_toStartOf="@+id/cardFrame" />

    <ImageView
        android:id="@+id/weakness"
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:src="@drawable/type_normal"
        app:layout_constraintBottom_toBottomOf="@+id/cardFrame"
        app:layout_constraintStart_toEndOf="@+id/wks"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:id="@+id/weaknessBurst"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/weakness_burst"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/cardFrame"
        app:layout_constraintStart_toEndOf="@+id/weakness" />

    <ImageView
        android:id="@+id/statChange1_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/stat_raise"
        android:visibility="invisible"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="@id/hp"
        app:layout_constraintTop_toTopOf="@id/hp"/>

