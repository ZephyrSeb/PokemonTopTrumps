<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="80dp"
    android:id="@+id/playerBanner">

    <ImageView
        android:id="@+id/bannerBack"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:src="@drawable/banner_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/statusIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_burned"
        android:layout_marginStart="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:fontFamily="@font/gill_sans"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/berryBack1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dark_circle"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/berryBack2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dark_circle"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toEndOf="@id/berryBack1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/berryBack3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dark_circle"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toEndOf="@id/berryBack2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/berry1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_pokeball_color"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/berry2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_pokeball_color"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/berryBack1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/berry3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_pokeball_color"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/berryBack2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/score"
        android:layout_width="144dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/score_tileable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/chargeCounter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        android:src="@drawable/icon_charge_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/bannerBreak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/break_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/bannerAura"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/break_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>