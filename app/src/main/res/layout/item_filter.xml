<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_gradient">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:background="@drawable/attribute_selection"
        android:elevation="8dp"
        android:shadowRadius="32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ruleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gill_sans"
        android:elevation="8dp"
        android:text="Filter"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Name"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/nameEditable"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:fontFamily="@font/gill_sans"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"/>

    <TextView
        android:id="@+id/pointValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Point Value"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/pointValue1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue2"/>

    <Button
        android:id="@+id/pointValue2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue1"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue3"/>

    <Button
        android:id="@+id/pointValue3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue2"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue4"/>

    <Button
        android:id="@+id/pointValue4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue3"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue5"/>

    <Button
        android:id="@+id/pointValue5"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue4"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue6"/>

    <Button
        android:id="@+id/pointValue6"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="6"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue5"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue7"/>

    <Button
        android:id="@+id/pointValue7"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="7"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue6"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue8"/>

    <Button
        android:id="@+id/pointValue8"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="8"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue7"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue9"/>

    <Button
        android:id="@+id/pointValue9"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="9"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue8"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toStartOf="@id/pointValue10"/>

    <Button
        android:id="@+id/pointValue10"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:layout_marginTop="8dp"
        android:text="10"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        app:layout_constraintStart_toEndOf="@id/pointValue9"
        app:layout_constraintTop_toBottomOf="@id/pointValue"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/aceSpec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ace Spec"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pointValue1"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/aceSpecY"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/icon_tick"
        app:layout_constraintStart_toEndOf="@id/aceSpec"
        app:layout_constraintTop_toTopOf="@id/aceSpec"
        app:layout_constraintBottom_toBottomOf="@id/aceSpec"/>

    <Button
        android:id="@+id/aceSpecN"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/icon_cross"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/aceSpecY"
        app:layout_constraintTop_toTopOf="@id/aceSpec"
        app:layout_constraintBottom_toBottomOf="@id/aceSpec"/>

    <TextView
        android:id="@+id/inDeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Deck"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/aceSpec"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/inDeckY"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/icon_tick"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/aceSpec"
        app:layout_constraintTop_toTopOf="@id/inDeck"
        app:layout_constraintBottom_toBottomOf="@id/inDeck"/>

    <Button
        android:id="@+id/inDeckN"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/empty_button"
        android:foreground="@drawable/icon_cross"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/aceSpecY"
        app:layout_constraintTop_toTopOf="@id/inDeck"
        app:layout_constraintBottom_toBottomOf="@id/inDeck"/>

    <Button
        android:id="@+id/applyButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:text="Apply"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/resetButton"
        app:layout_constraintTop_toBottomOf="@id/aceSpec"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:textColor="@color/black"
        android:fontFamily="@font/futura_medium_bt"
        android:text="Reset"
        android:translationZ="8dp"
        android:shadowRadius="32"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/applyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aceSpec"/>

</androidx.constraintlayout.widget.ConstraintLayout>